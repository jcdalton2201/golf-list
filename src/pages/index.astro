---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<style>
	
	.main {
		display: grid;
		grid-template-columns: 1fr 2fr;
		padding: 1rem;
		
	}
	
	.bottom {
		display: grid;
		grid-template-columns: 1fr;
		grid-column: 1/-1;
		background: #20160b;
		padding: 0 1rem;
		column-gap: 1rem;
	}
	.nav {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		background: linear-gradient(0.25turn,#1c2627,#1c2627,#1c2627);
		color: white;
		grid-column-gap: 4rem;
		margin-top: 2rem;
	}
	.nav .left-nav {
		grid-column: 2/3;
		border-right: 1px solid white;
		padding: 16px 32px;
		grid-row: 1/2;
	}
	.nav .right-nav {
		grid-column: 3/4;
		border-left: 1px solid white;
		padding: 16px 32px;
		grid-row: 1/2;
		z-index: 1;
	}
	.nav p {
		font-size: .85rem;
	}
	h2 {
		text-align: center;
	}
	a {
		border-radius: 2.25rem;
		box-sizing: border-box;
		cursor: pointer;
		display: inline-block;
		font-size: 1rem;
		font-weight: 400;
		height: 3rem;
		line-height: 3rem;
		min-width: 100%;
		text-align: center;
		text-decoration: none;
		white-space: nowrap;
		background: #f9c040;
		border: none;
		margin: 0;
		padding: 0 1rem;
	}
	a:hover {
		filter: brightness(120%) saturate(120%);
		text-decoration: none;
	}
	a:active {
		filter: brightness(80%) saturate(80%);
		text-decoration: none;
	}
	img {
		object-fit: fill;
		width: 100%;
	}
	.deco {
		grid-column: 3/-1;
		grid-row: 1/2;
	}
	.deco img {
		opacity: .6;
		transform: translateY(-93px);
	}
	@media only screen and (min-width: 500px) {
		.bottom {
			/* grid-template-columns: 1fr 1fr 1fr; */
		}
	}

	@media only screen and (min-width: 600px) {
		.bottom {
			grid-template-columns: 1fr 1fr 1fr;
			grid-row: 0;
		}
	}
</style>
<BaseLayout>
	<div>
		<div class="hero">
			<img src="/golf-list/images/hero.webp">
		</div>
		<div class="nav">
			
			<div class="left-nav">
				<h2>Courses Played</h2>
				<p>
